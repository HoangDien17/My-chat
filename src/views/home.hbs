<div class="list-people">
  <div class="bar-list-people">
    <div class="search-people">
      <form action="">
        <div class="p-1 bg-light rounded rounded-pill shadow-sm">
          <div class="input-group">
            <div class="input-group-prepend">
              <button id="button-addon2" type="submit" class="btn btn-link text-dark"><i
                  class="fa fa-search"></i></button>
            </div>
            <input type="search" placeholder="Tìm kiếm" aria-describedby="button-addon2"
              class="form-control border-0 bg-light">
          </div>
        </div>
      </form>
    </div>
    <div class="add-people">
      <button class="btn btn-outline add-new-people" data-toggle="modal" data-target="#add-someone" type="button">
        <i class="fas fa-user-plus" style="font-size: 18px;"></i>
      </button>
      <!-- Modal add contact -->
      {{>modal-add-contact}}
    </div>
    <div class="add-many-people ">
      <button class="btn btn-outline add-new-group" data-toggle="modal" data-target="#add-group-chat" type="button">
        <i class="fas fa-users fa-lg"></i>
      </button>

      <!-- Modal add group contact -->
      {{>modal-group-contact}}
    </div>
  </div>
  <hr style="width: 90%">
  {{>list-friend}}
</div>