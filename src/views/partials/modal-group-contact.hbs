<div class="modal fade" id="add-group-chat" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content modal-content-chat-group">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Tạo nhóm</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="input-group-name">
          <label for="group-name">Tên nhóm : </label>
          <div class="input-group mb-3">
            <input type="text" class="form-control" id="group-name" aria-describedby="basic-addon3"
              placeholder="Nhập tên nhóm ...">
          </div>
        </div>
        <div class="list-friend-to-add">
          <div class="list-to-add">
            {{#if friendContacts}}
            {{#each friendContacts as |item|}}
            <div class="form-check list-contact-check" data-id="{{{item._id}}}">
              <div class="item-list-contact">
                <img src="/img/avatar/{{{item.avatar}}}" alt="image" class="image-item-list-contact">
                <h6>{{{item.username}}}</h6>
                <input class="form-check-input " type="checkbox" value="{{{item._id}}}" id="flexCheckDefault">
              </div>
            </div>
            {{/each}}
            {{/if}}
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary cancel-get-list-contact" data-dismiss="modal">Hủy</button>
        <button type="button" class="btn btn-primary target-get-list-contact">Tạo nhóm</button>
      </div>
    </div>
  </div>
</div>